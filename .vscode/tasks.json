{
    "version": "2.0.0",
    "echoCommand": true,
    "command": "gradle",
    "presentation": {
      "echo": true,
      "reveal": "always",
      "focus": false,
      "panel": "shared"
    },
    "tasks": [
      {
        "label": "compileJava",
        "type": "shell"
      },
      {
        "key": "cmd+shift+r",
        "label": "buildUI",
        "type": "shell"
      },
      {
        "label": "test",
        "type": "shell",
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      {
        "label": "clean",
        "type": "shell"
      },
      {
        "label": "build",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "npm",
        "script": "build",
        "path": "src/main/ui/",
        "problemMatcher": []
      }
    ]
  }